{
  "name": "pulse-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "npm run type-check && npm run lint && npm run format:check && npm run test:unit",
    "test:unit": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:db": "node scripts/test-database.js",
    "test:apis": "node scripts/test-apis.js",
    "test:all": "npm run test && npm run test:e2e",
    "deploy": "npm run build && npx gh-pages -d out",
    "deploy:production": "node scripts/deploy-production.js",
    "deploy:worker": "node scripts/deploy-worker.js",
    "test:worker": "node scripts/test-worker.js",
    "setup:db": "echo 'Please run database/schema.sql in your Supabase dashboard'",
    "lighthouse": "lhci autorun",
    "analyze": "cross-env ANALYZE=true npm run build"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@openrouter/ai-sdk-provider": "^0.7.3",
    "@supabase/ssr": "^0.6.1",
    "@supabase/supabase-js": "^2.53.0",
    "ai": "^4.3.19",
    "next": "15.4.5",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "gh-pages": "^6.3.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "node-fetch": "^3.3.2",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.4",
    "ts-jest": "^29.4.0",
    "typescript": "^5"
  }
}
